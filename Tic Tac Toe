<head>
  <meta charset="UTF-8">
  <title>Tic Tac Toe</title>
  <style>
    body {
      background: #f3f4f8;
      font-family: 'Segoe UI', Arial, sans-serif;
      text-align: center;
      margin-top: 40px;
    }
    h1 {
      color: #333;
      margin-bottom: 12px;
      font-size: 2.2rem;
      text-shadow: 0 2px 8px #fff;
    }
    #game {
      display: grid;
      grid-template-columns: repeat(3, 80px);
      grid-template-rows: repeat(3, 80px);
      gap: 8px;
      margin: 0 auto 18px auto;
      width: fit-content;
    }
    .cell {
      width: 80px;
      height: 80px;
      background: #fff;
      border: 2px solid #aaa;
      border-radius: 15px;
      font-size: 2.6rem;
      font-weight: bold;
      color: #1976d2;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: background 0.18s, color 0.18s;
    }
    .cell.winner {
      background: #ffd700;
      color: #c0392b;
    }
    #info {
      font-size: 1.3rem;
      font-weight: bold;
      color: #1976d2;
      min-height: 26px;
      margin-bottom: 8px;
    }
    #restartBtn {
      margin: 12px auto 0 auto;
      padding: 7px 30px;
      font-size: 18px;
      font-weight: bold;
      color: #fff;
      background: linear-gradient(90deg, #74ebd5 0%, #4fc3f7 100%);
      border: none;
      border-radius: 15px;
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(76,175,80,0.12);
      outline: none;
      transition: filter 0.2s, background 0.2s;
    }
    #restartBtn:hover {
      background: linear-gradient(90deg, #4fc3f7 0%, #74ebd5 100%);
      filter: brightness(1.08);
    }
  </style>
</head>
<body>
  <h1>Tic Tac Toe</h1>
  <div id="info"></div>
  <div id="game"></div>
  <button id="restartBtn">Restart</button>
  <script>
    const gameDiv = document.getElementById('game');
    const infoDiv = document.getElementById('info');
    const restartBtn = document.getElementById('restartBtn');

    let board, currentPlayer, gameOver;

    function initGame() {
      board = Array(3).fill(null).map(()=>Array(3).fill(''));
      currentPlayer = 'X';
      gameOver = false;
      infoDiv.textContent = "Turn: X";
      gameDiv.innerHTML = '';
      for (let r=0; r<3; r++) {
        for (let c=0; c<3; c++) {
          let cell = document.createElement('div');
          cell.className = 'cell';
          cell.dataset.row = r;
          cell.dataset.col = c;
          cell.addEventListener('click', handleCellClick);
          gameDiv.appendChild(cell);
        }
      }
    }

    function handleCellClick(e) {
      if (gameOver) return;
      const cell = e.currentTarget;
      const r = parseInt(cell.dataset.row), c = parseInt(cell.dataset.col);

      if (board[r][c]) return; // Already filled

      board[r][c] = currentPlayer;
      cell.textContent = currentPlayer;

      const winner = checkWinner();
      if (winner) {
        highlightWinner(winner.positions);
        infoDiv.textContent = `Player ${winner.player} wins! üéâ`;
        gameOver = true;
        return;
      } else if (board.flat().every(x => x)) {
        infoDiv.textContent = "Draw! ü§ù";
        gameOver = true;
        return;
      }

      currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
      infoDiv.textContent = "Turn: " + currentPlayer;
    }

    function checkWinner() {
      const lines = [
        // rows
        [[0,0],[0,1],[0,2]],
        [[1,0],[1,1],[1,2]],
        [[2,0],[2,1],[2,2]],
        // cols
        [[0,0],[1,0],[2,0]],
        [[0,1],[1,1],[2,1]],
        [[0,2],[1,2],[2,2]],
        // diags
        [[0,0],[1,1],[2,2]],
        [[0,2],[1,1],[2,0]],
      ];
      for (const positions of lines) {
        const [a,b,c] = positions;
        const v1 = board[a[0]][a[1]], v2 = board[b[0]][b[1]], v3 = board[c[0]][c[1]];
        if (v1 && v1===v2 && v2===v3) {
          return {player: v1, positions};
        }
      }
      return null;
    }

    function highlightWinner(positions) {
      for (const [r,c] of positions) {
        const cell = gameDiv.querySelector(`.cell[data-row="${r}"][data-col="${c}"]`);
        cell.classList.add('winner');
      }
    }

    restartBtn.onclick = initGame;

    initGame();
  </script>
</body>
</html>
